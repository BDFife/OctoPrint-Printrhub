{% extends 'printrhub_files.jinja2' %}

{% block browser_container %}

<div class="browser column">

  {% set printrbar_title = 'PRINTER SETTINGS' %}
  {% include 'html/printrbar.jinja2' %}
  <div class="printrhub_text">
    <p> This page is for settings and system configuration. </p>
    <p> Right now, you can use this button to revert to the vanilla
    OctoPrint UI: </p>
    <div id="form"> 
      <form method="post" action="toggleUI?apikey=">
        <button type="submit" class="printrhub_btns">Disable Printrhub
  UI</button>
      </form>
    </div> <!-- form -->
  </div> <!-- printrhub_text -->
</div> <!-- browser column -->

{% endblock %}
